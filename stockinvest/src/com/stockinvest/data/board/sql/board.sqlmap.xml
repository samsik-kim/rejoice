<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="board">
	
	<sql id="pagingHeader">
		SELECT  
			y.*
		FROM (
			SELECT 
			 x.*,@rnum:=@rnum+1 as num
			FROM (
	</sql>	
		
	<sql id="pagingFooter">
		<![CDATA[	
			) x,(select @rnum:=0) N 
		) y
		WHERE num >=#startNum# AND num <= #endNum#
		]]>
	</sql>	
			
	<typeAlias alias="boardInfo" type="com.stockinvest.data.board.info.BoardInfo"/>
	<typeAlias alias="boardManageInfo" type="com.stockinvest.data.board.info.BoardManageInfo"/>
	
	<select id="selectBoardManageList" resultClass="boardManageInfo">
		SELECT SEQ_NO AS SEQNO, 
			   BOARD_NAME AS BOARDNAME,
			   BBS_CD AS BBSCD
		FROM BOARD_MANAGER
	</select>
	
	<select id="selectBoardList" parameterClass="boardInfo" resultClass="boardInfo">
		<isNotEmpty property="currentPage">
			<isNotEqual property="currentPage" compareValue="0">
				<include refid="pagingHeader"/>
			</isNotEqual>
		</isNotEmpty>
				SELECT SEQ_NO		AS SEQNO,
					   DATE_FORMAT(CRT_DATE,'%Y-%m-%d') AS CRTDATE,				
			           SUBJECT		AS SUBJECT,
			           CODE_NAME	AS CODENAME,
			           CODE_NUM		AS CODENUM
				FROM BOARD
				WHERE 1=1
				AND BBS_CD = #bbsCd#
				<dynamic>
					<isNotEmpty property="searchKey">
						<isEqual property="searchKey" compareValue="codeName">
							<isNotEmpty property="searchValue">
								AND CODE_NAME LIKE CONCAT(#searchValue#,'%')
							</isNotEmpty>
						</isEqual>
						<isEqual property="searchKey" compareValue="codeNum">
							<isNotEmpty property="searchValue">
								AND CODE_NUM LIKE CONCAT(#searchValue#,'%')
							</isNotEmpty>
						</isEqual>
						<isEqual property="searchKey" compareValue="subject">
							<isNotEmpty property="searchValue">
								AND SUBJECT LIKE CONCAT(#searchValue#,'%')
							</isNotEmpty>
						</isEqual>
						<isEqual property="searchKey" compareValue="content">
							<isNotEmpty property="searchValue">
								AND CONTENT LIKE CONCAT(#searchValue#,'%')
							</isNotEmpty>
						</isEqual>												
					</isNotEmpty>
					<isNotEmpty property="stDt">
					<![CDATA[	AND CRT_DATE >= #stDt# ]]> 
					</isNotEmpty>
					<isNotEmpty property="enDt">
					<![CDATA[	AND CRT_DATE <= #enDt# ]]>
					</isNotEmpty>
				</dynamic>	
				ORDER BY SEQ_NO DESC
		<isNotEmpty property="currentPage">
			<isNotEqual property="currentPage" compareValue="0">
				<include refid="pagingFooter"/>
			</isNotEqual>
		</isNotEmpty>
	</select>
	
	<select id="selectBoardListExcel" parameterClass="boardInfo" resultClass="java.util.HashMap">
		SELECT SEQ_NO		AS SEQNO,
	           CRT_DATE 	AS CRTDATE,
	           SUBJECT		AS SUBJECT,
	           CODE_NAME	AS CODENAME,
	           CODE_NUM		AS CODENUM
 		FROM BOARD
		WHERE 1=1
		AND BBS_CD = #bbsCd#
		<dynamic>
			<isNotEmpty property="searchKey">
				<isEqual property="searchKey" compareValue="codeName">
					<isNotEmpty property="searchValue">
						AND CODE_NAME LIKE CONCAT(#searchValue#,'%')
					</isNotEmpty>
				</isEqual>
				<isEqual property="searchKey" compareValue="codeNum">
					<isNotEmpty property="searchValue">
						AND CODE_NUM LIKE CONCAT(#searchValue#,'%')
					</isNotEmpty>
				</isEqual>
				<isEqual property="searchKey" compareValue="subject">
					<isNotEmpty property="searchValue">
						AND SUBJECT LIKE CONCAT(#searchValue#,'%')
					</isNotEmpty>
				</isEqual>
				<isEqual property="searchKey" compareValue="content">
					<isNotEmpty property="searchValue">
						AND CONTENT LIKE CONCAT(#searchValue#,'%')
					</isNotEmpty>
				</isEqual>		
			</isNotEmpty>
			<isNotEmpty property="stDt">
			<![CDATA[	AND CRT_DATE >= #stDt# ]]> 
			</isNotEmpty>
			<isNotEmpty property="enDt">
			<![CDATA[	AND CRT_DATE <= #enDt# ]]>
			</isNotEmpty>
		</dynamic>	
		ORDER BY SEQ_NO DESC	
	</select>
	
	<select id="selectBoardListCount" parameterClass="boardInfo" resultClass="int">
		SELECT 
			COUNT(*)
		FROM BOARD
		WHERE 1=1
		<dynamic>
			<isNotEmpty property="searchKey">
				<isEqual property="searchKey" compareValue="codeName">
					<isNotEmpty property="searchValue">
						AND CODE_NAME LIKE CONCAT(#searchValue#,'%')
					</isNotEmpty>
				</isEqual>
				<isEqual property="searchKey" compareValue="codeNum">
					<isNotEmpty property="searchValue">
						AND CODE_NUM LIKE CONCAT(#searchValue#,'%')
					</isNotEmpty>
				</isEqual>
				<isEqual property="searchKey" compareValue="subject">
					<isNotEmpty property="searchValue">
						AND SUBJECT LIKE CONCAT(#searchValue#,'%')
					</isNotEmpty>
				</isEqual>
				<isEqual property="searchKey" compareValue="content">
					<isNotEmpty property="searchValue">
						AND CONTENT LIKE CONCAT(#searchValue#,'%')
					</isNotEmpty>
				</isEqual>		
			</isNotEmpty>
			<isNotEmpty property="stDt">
			<![CDATA[	AND CRT_DATE >= #stDt# ]]> 
			</isNotEmpty>
			<isNotEmpty property="enDt">
			<![CDATA[	AND CRT_DATE <= #enDt# ]]>
			</isNotEmpty>
		</dynamic>			
	</select>
	
	<select id="selectBoardInfo" parameterClass="boardInfo" resultClass="boardInfo">
		SELECT 
			SEQ_NO		AS SEQNO,
			CODE_NAME	AS CODENAME,
			CODE_NUM	AS CODENUM,
			SUBJECT		AS SUBJECT,
			CONTENT		AS CONTENT,
			CRT_DATE	AS CRTDATE
		FROM BOARD
		WHERE 1=1
		AND BBS_CD = #bbsCd#
		<dynamic>
			<isNotEmpty property="seqNo">
				AND SEQ_NO = #seqNo#
			</isNotEmpty>
		</dynamic>
	</select>
	
	<insert id="insert" parameterClass="boardInfo">
		INSERT INTO BOARD(SEQ_NO, CRT_DATE
		) VALUES ((SELECT IFNULL(MAX(SEQ_NO),0)+1 FROM BOARD),DATE_FORMAT(NOW(), '%Y%m%d%H%i%S')
		)
	</insert>
	
	<update id="update" parameterClass="boardInfo">
		UPDATE BOARD
			SET CODE_NAME = #codeName#,
			    CODE_NUM  = #codeNum#,
				SUBJECT	  = #subject#,
				CONTENT   = #content#
		WHERE SEQ_NO	= #seqNo#
	</update>
	
	<delete id="delete" parameterClass="boardInfo">
		DELETE FROM BOARD
		WHERE SEQ_NO = #seqNo#
	</delete>
	

</sqlMap>