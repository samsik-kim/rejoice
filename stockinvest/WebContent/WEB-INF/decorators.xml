<?xml version="1.0" encoding="utf-8"?>

<decorators defaultdir="/WEB-INF/jsp/decorators/layout">
    <excludes>
        <pattern>**/ajax*</pattern>
        <pattern>**/sign*</pattern>
        <pattern>**/index.jsp</pattern>
    	<pattern>**/login*</pattern>
        <pattern>**/logOut*</pattern>
    </excludes>

    <decorator name="layout" page="layout.jsp">
        <pattern>/*</pattern>
    </decorator>

    <decorator name="empty" page="empty.jsp" >
    </decorator>
    
    <decorator name="pop" page="popLayout.jsp" >
    	<pattern>**/pop*</pattern>
    </decorator>
</decorators>